<mx:TextArea xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:text="flash.text.*">

	<mx:Script>
		<![CDATA[
			private function init() : void {
				measuringTextField.styleSheet = styleSheet;
			}

			public function getCurrentLine () : int {
				var currentLine : int = measuringTextField.getLineIndexOfChar( selectionBeginIndex ) +1;
				return currentLine;
			}

			public function getNumLines () : int {
				var numLines : int = measuringTextField.numLines;
				return numLines;
			}

		]]>
	</mx:Script>
	<text:TextField id="measuringTextField" text="{ text }" height="{ height }" width="{ width }" wordWrap="true"/>
</mx:TextArea>
